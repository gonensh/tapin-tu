<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/white"
    >

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hello_world1"
        android:layout_marginTop="62dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#4c6076" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_btn"
        android:id="@+id/NFCbutton"
        android:layout_marginTop="86dp"
        android:clickable="true"
        android:layout_below="@+id/choose_event"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_event"
        android:id="@+id/choose_event"
        android:textSize="20dp"
        android:layout_below="@+id/hello_world1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textColor="#4c6076" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_input"
        android:layout_below="@+id/choose_event"
        android:layout_marginTop="24dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#4c6076"/>

</RelativeLayout>
